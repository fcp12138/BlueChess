<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <!-- 渐变 -->
            <gradient
                android:angle="270"
                android:endColor="@android:color/darker_gray"
                android:startColor="@android:color/darker_gray" />
            <!-- 描边 -->
            <stroke
                android:width="1dp"
                android:color="@android:color/darker_gray" />
            <!-- 圆角 -->
            <corners
                android:radius="1dp" />

        </shape>
    </item>
    <item android:state_pressed="false" >
        <shape>
            <!-- 渐变 -->
            <gradient
                android:angle="270"
                android:endColor="#EBA948"
                android:startColor="#EBA948" />
            <!-- 描边 -->
            <stroke
                android:width="1dp"
                android:color="#D6D65C" />
            <!-- 圆角 -->
            <corners
                android:radius="1dp" />

        </shape>
    </item>
    <item >
        <shape>
            <!-- 渐变 -->
            <gradient
                android:angle="270"
                android:endColor="#EBA948"
                android:startColor="#EBA948" />
            <!-- 描边 -->
            <stroke
                android:width="1dp"
                android:color="#D6D65C" />
            <!-- 圆角 -->
            <corners
                android:radius="1dp" />

        </shape>
    </item>
</selector>